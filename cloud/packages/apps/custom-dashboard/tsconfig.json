{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "paths": {
      "@mentra/sdk": ["../../sdk"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
